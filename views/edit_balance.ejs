<h3 class="mb-5">Edit User Balance</h3>

<div class="card mb-4">
    <div class="card-header bg-primary text-white">
        <h4><i class="fas fa-money-bill-wave me-2"></i> Edit Balance for <%= user.name %></h4>
    </div>
    <div class="card-body">
        <div class="alert alert-info">
            <p><i class="fas fa-info-circle me-2"></i> You are updating the balance for <strong><%= user.name %></strong> (Email: <%= user.email %>).</p>
            <p>Current balance: <strong>$<%= user.balance ? user.balance.toFixed(2) : '0.00' %></strong></p>
        </div>
        
        <form action="/admin/update-balance" method="post">
            <input type="hidden" name="userId" value="<%= user._id %>">
            
            <div class="form-outline mb-4">
                <label for="newBalance" class="form-label">New Balance (USD)</label>
                <input 
                    type="number" 
                    class="form-control" 
                    id="newBalance" 
                    name="newBalance" 
                    required 
                    min="0"
                    step="0.01"
                    placeholder="Enter new balance"
                    value="<%= user.balance || 0 %>"
                />
                <div class="form-text">Enter the new balance amount for this user.</div>
            </div>
            
            <div class="form-outline mb-4">
                <label for="reason" class="form-label">Reason for Change</label>
                <textarea 
                    class="form-control" 
                    id="reason" 
                    name="reason" 
                    rows="3"
                    placeholder="Enter reason for balance change"
                    required
                ></textarea>
                <div class="form-text">This will be recorded in the system and may be visible to the user.</div>
            </div>
            
            <div class="d-flex justify-content-between">
                <a href="/admin" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i> Back to Admin Panel
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i> Update Balance
                </button>
            </div>
        </form>
    </div>
</div>
