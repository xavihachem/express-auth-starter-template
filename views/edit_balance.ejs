<h3 class="mb-5">Add Deposit</h3>

<div class="card mb-4">
    <div class="card-header bg-success text-white">
        <h4><i class="fas fa-money-bill-wave me-2"></i> Add Deposit for <%= user.name %></h4>
    </div>
    <div class="card-body">
        <div class="alert alert-info">
            <p><i class="fas fa-info-circle me-2"></i> You are adding a deposit for <strong><%= user.name %></strong> (Email: <%= user.email %>).</p>
            <p>Current balance: <strong>$<%= user.balance ? user.balance.toFixed(2) : '0.00' %></strong></p>
        </div>
        
        <form action="/admin/update-balance" method="post">
            <input type="hidden" name="userId" value="<%= user._id %>">
            <input type="hidden" name="currentBalance" value="<%= user.balance || 0 %>">
            <input type="hidden" name="isDeposit" value="true">
            
            <div class="form-outline mb-4">
                <label for="depositAmount" class="form-label">Deposit Amount (USD)</label>
                <input 
                    type="number" 
                    class="form-control" 
                    id="depositAmount" 
                    name="depositAmount" 
                    required 
                    min="1"
                    step="0.01"
                    placeholder="Enter deposit amount"
                    value=""
                />
                <div class="form-text">Enter the amount to add to the user's balance.</div>
            </div>
            

            
            <div class="d-flex justify-content-between">
                <a href="/admin" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i> Back to Admin Panel
                </a>
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-plus-circle me-2"></i> Add Deposit
                </button>
            </div>
        </form>
    </div>
</div>
