<div class="row">
    <div class="col-12">
        <h2 class="cosmic-title text-center mb-4">Reset Password</h2>
        
        <form action="/set-new-password" method="post">
            <% if (!isTokenValid) { %>
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="alert alert-danger mb-4" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            Password reset link expired or invalid. Please generate a new link to reset your password.
                        </div>
                        <div class="d-grid gap-2">
                            <a href="/forgot-password" class="btn cosmic-btn btn-lg">
                                <i class="fas fa-link me-2"></i>Get New Link
                            </a>
                        </div>
                    </div>
                </div>
            <% } else { %>
                <div class="row justify-content-center">
                    <div class="col-lg-10">
                        <div class="text-white mb-4 text-center">
                            <p>Create a new secure password for your account.</p>
                        </div>
                    </div>
                </div>
                
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <div class="form-outline mb-4">
                            <input type="password" name="new_password" id="new_password" class="form-control cosmic-input" required placeholder="New Password" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-outline mb-4">
                            <input type="password" name="confirm_new_password" id="confirm_new_password" class="form-control cosmic-input" required placeholder="Confirm New Password" />
                        </div>
                    </div>
                </div>
                
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <div class="d-grid gap-2 mb-4">
                            <button class="btn cosmic-btn btn-lg" type="submit" value="Update password">
                                <i class="fas fa-key me-2"></i>Reset Password
                            </button>
                        </div>
                    </div>
                </div>
                <input type="hidden" name="id" id="id" value="<%=locals.id%>">
                <input type="hidden" name="key" id="key" value="<%=locals.key%>">
            <% } %>
            
            <div class="divider d-flex align-items-center my-4"></div>
            
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="d-grid gap-2">
                        <a href="/" class="btn cosmic-btn-outline btn-lg btn-block">
                            <i class="fas fa-home me-2"></i>Return to Homepage
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>