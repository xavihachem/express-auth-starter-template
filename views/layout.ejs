    <!-- Custom script for mobile navbar and dropdowns -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize Bootstrap tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            })
            
            // Only initialize navbar components if the navbar exists (not on login/signup pages)
            var navbarElement = document.getElementById('navbarNav');
            if (navbarElement) {
                // Let Bootstrap handle the toggle natively
                // This ensures proper opening and closing of the mobile menu
                var bsCollapse = new bootstrap.Collapse(navbarElement, {
                    toggle: false
                });
                
                // Add click handler to all nav links to close menu when clicked on mobile
                var navLinks = document.querySelectorAll('.navbar-nav .nav-link');
                navLinks.forEach(function(link) {
                    link.addEventListener('click', function() {
                        if (window.innerWidth < 992) { // Only on mobile view
                            bsCollapse.hide();
                        }
                    });
                });
                
                // Fix for dropdown menus to appear on top of all content
                var dropdownToggles = document.querySelectorAll('[data-bs-toggle="dropdown"]');
                dropdownToggles.forEach(function(toggle) {
                    toggle.addEventListener('click', function() {
                        // Small delay to ensure the dropdown is created
                        setTimeout(function() {
                            var dropdown = document.querySelector('.dropdown-menu.show');
                            if (dropdown) {
                                // Move dropdown to the body to avoid stacking context issues
                                document.body.appendChild(dropdown);
                                
                                // Position the dropdown correctly
                                var toggleRect = toggle.getBoundingClientRect();
                                var isUserDropdown = toggle.id === 'userDropdown';
                                
                                dropdown.style.position = 'fixed';
                                dropdown.style.zIndex = '9999';
                                dropdown.style.top = (toggleRect.bottom + window.scrollY) + 'px';
                                
                                if (isUserDropdown) {
                                    // Position the user dropdown to the right of the toggle button
                                    dropdown.style.left = toggleRect.left + 'px';
                                    dropdown.style.maxHeight = '200px';
                                    dropdown.style.overflowY = 'auto';
                                    dropdown.style.width = '200px';
                                } else {
                                    // For notification dropdown, position it more to the right
                                    dropdown.style.left = (toggleRect.left - 50) + 'px';
                                    dropdown.style.maxHeight = '400px';
                                    dropdown.style.overflowY = 'auto';
                                    dropdown.style.width = '280px';
                                }
                                
                                // Add event listener to close dropdown when clicking outside
                                var closeDropdownHandler = function(e) {
                                    if (!dropdown.contains(e.target) && !toggle.contains(e.target)) {
                                        dropdown.classList.remove('show');
                                        document.removeEventListener('click', closeDropdownHandler);
                                    }
                                };
                                
                                // Delay adding the event listener to prevent immediate closing
                                setTimeout(function() {
                                    document.addEventListener('click', closeDropdownHandler);
                                }, 100);
                            }
                        }, 10);
                    });
                });
            }
        });
    </script>

