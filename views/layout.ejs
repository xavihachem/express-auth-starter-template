                            <%- body %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <% } %>
    <%- script %>
    <% if (locals.flash) { %>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            <% if (flash.success && flash.success.length > 0) { %>
            var successMessage = "<%= flash.success %>";
            new Noty({
                theme: 'nest',
                text: successMessage,
                type: 'success',
                layout: 'topRight',
                timeout: 2500
            }).show();
            <% } %>
            
            <% if (flash.error && flash.error.length > 0) { %>
            var errorMessage = "<%= flash.error %>";
            new Noty({
                theme: 'nest',
                text: errorMessage,
                type: 'error',
                layout: 'topRight',
                timeout: 2500
            }).show();
            <% } %>
        });
    </script>
    <% } %>
    
    <!-- IntlTelInput JS for phone number input with country codes -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.19/js/intlTelInput.min.js" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.19/js/utils.js" referrerpolicy="no-referrer"></script>
    
    <!-- Auto-inject CSRF token into all POST forms -->
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        document.querySelectorAll('form').forEach(function(form) {
          if (form.method && form.method.toLowerCase() === 'post') {
            var input = document.createElement('input');
            input.type = 'hidden';
            input.name = '_csrf';
            input.value = '<%= csrfToken %>';
            form.prepend(input);
          }
        });
      });
    </script>
  </body>

</html>