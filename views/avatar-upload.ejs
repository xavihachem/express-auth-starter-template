<div class="container-fluid animate-fade-in">
    <div class="row mb-4">
        <div class="col-12">
            <h3 class="mb-4 animate-fade-in">
                <i class="fas fa-user-circle me-2"></i>Choose Profile Avatar
                <a href="/profile" class="btn btn-outline-primary btn-sm float-end">
                    <i class="fas fa-arrow-left me-1"></i>Back to Profile
                </a>
            </h3>
        </div>
    </div>

    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="card animate-fade-in delay-1">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-user-astronaut me-2"></i>Select Your Avatar</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info mb-4">
                        <i class="fas fa-info-circle me-2"></i>
                        Select one of the avatars below to use as your profile picture. Click on an avatar to select it.
                    </div>
                    
                    <form action="/update-avatar" method="POST" id="avatar-form">
                        <input type="hidden" name="selectedAvatar" id="selected-avatar" value="">
                        
                        <div class="row">
                            <div class="col-6 col-md-4 col-lg-2 mb-4">
                                <div class="avatar-option" data-avatar="/css/images/Avatar/Avatar1.jpeg">
                                    <img src="/css/images/Avatar/Avatar1.jpeg" alt="Avatar 1" class="img-fluid rounded-circle avatar-preview">
                                    <div class="avatar-select-overlay">
                                        <i class="fas fa-check-circle"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6 col-md-4 col-lg-2 mb-4">
                                <div class="avatar-option" data-avatar="/css/images/Avatar/Avatar2.jpeg">
                                    <img src="/css/images/Avatar/Avatar2.jpeg" alt="Avatar 2" class="img-fluid rounded-circle avatar-preview">
                                    <div class="avatar-select-overlay">
                                        <i class="fas fa-check-circle"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6 col-md-4 col-lg-2 mb-4">
                                <div class="avatar-option" data-avatar="/css/images/Avatar/avatar3.jpeg">
                                    <img src="/css/images/Avatar/avatar3.jpeg" alt="Avatar 3" class="img-fluid rounded-circle avatar-preview">
                                    <div class="avatar-select-overlay">
                                        <i class="fas fa-check-circle"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6 col-md-4 col-lg-2 mb-4">
                                <div class="avatar-option" data-avatar="/css/images/Avatar/avatar4.jpeg">
                                    <img src="/css/images/Avatar/avatar4.jpeg" alt="Avatar 4" class="img-fluid rounded-circle avatar-preview">
                                    <div class="avatar-select-overlay">
                                        <i class="fas fa-check-circle"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6 col-md-4 col-lg-2 mb-4">
                                <div class="avatar-option" data-avatar="/css/images/Avatar/avatar5.jpeg">
                                    <img src="/css/images/Avatar/avatar5.jpeg" alt="Avatar 5" class="img-fluid rounded-circle avatar-preview">
                                    <div class="avatar-select-overlay">
                                        <i class="fas fa-check-circle"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6 col-md-4 col-lg-2 mb-4">
                                <div class="avatar-option" data-avatar="/css/images/Avatar/Create avatar for womens eclipse theme.jpeg">
                                    <img src="/css/images/Avatar/Create avatar for womens eclipse theme.jpeg" alt="Avatar 6" class="img-fluid rounded-circle avatar-preview">
                                    <div class="avatar-select-overlay">
                                        <i class="fas fa-check-circle"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="text-center mt-3">
                            <button type="submit" class="btn btn-primary" id="save-avatar-btn" disabled>
                                <i class="fas fa-save me-2"></i>Save Selected Avatar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-option {
        position: relative;
        cursor: pointer;
        transition: all 0.3s ease;
        border-radius: 50%;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    
    .avatar-option:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }
    
    .avatar-preview {
        width: 100%;
        aspect-ratio: 1/1;
        object-fit: cover;
        border: 3px solid transparent;
        transition: all 0.3s ease;
    }
    
    .avatar-option.selected .avatar-preview {
        border-color: #0d6efd;
    }
    
    .avatar-select-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(13, 110, 253, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.3s ease;
        border-radius: 50%;
    }
    
    .avatar-select-overlay i {
        color: white;
        font-size: 2rem;
    }
    
    .avatar-option.selected .avatar-select-overlay {
        opacity: 1;
    }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const avatarOptions = document.querySelectorAll('.avatar-option');
    const selectedAvatarInput = document.getElementById('selected-avatar');
    const saveAvatarBtn = document.getElementById('save-avatar-btn');
    
    // Handle avatar selection
    avatarOptions.forEach(option => {
        option.addEventListener('click', function() {
            // Remove selected class from all options
            avatarOptions.forEach(opt => opt.classList.remove('selected'));
            
            // Add selected class to clicked option
            this.classList.add('selected');
            
            // Update hidden input with selected avatar path
            selectedAvatarInput.value = this.dataset.avatar;
            
            // Enable save button
            saveAvatarBtn.disabled = false;
        });
    });
});
</script>
