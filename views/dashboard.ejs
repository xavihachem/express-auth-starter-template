<div class="container-fluid animate-fade-in">
    <div class="row mb-4">
        <div class="col-12">
            <h3 class="mb-4 animate-fade-in"><i class="fas fa-tachometer-alt me-2"></i>Dashboard</h3>
        </div>
    </div>

    <!-- Welcome Card with Glass Morphism -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card animate-fade-in delay-1">
                <div class="card-header">
                    <div class="d-flex align-items-center">
                        <div class="rounded-circle bg-primary p-3 me-3 text-white">
                            <i class="fas fa-user-circle fa-2x"></i>
                        </div>
                        <div>
                            <h4 class="mb-0">Welcome back, <%= locals.user.name %>!</h4>
                            <p class="text-muted mb-0">Last login: <%= new Date().toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric', hour: '2-digit', minute: '2-digit' }) %></p>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <div class="d-flex mb-3">
                                <div class="me-4">
                                    <p class="text-muted mb-1">Email Address</p>
                                    <p class="mb-0 fw-bold"><i class="fas fa-envelope me-2 text-primary"></i><%= locals.user.email %></p>
                                </div>
                                <div>
                                    <p class="text-muted mb-1">Account Type</p>
                                    <span class="badge rounded-pill <%= locals.user.role === 'admin' ? 'bg-danger' : 'bg-success' %> px-3 py-2">
                                        <i class="<%= locals.user.role === 'admin' ? 'fas fa-user-shield' : 'fas fa-user' %> me-2"></i>
                                        <%= locals.user.role === 'admin' ? 'Administrator' : 'Regular User' %>
                                    </span>
                                </div>
                            </div>
                            <div class="mt-4">
                                <p class="mb-2">Investment Access Status:</p>
                                <div class="progress" style="height: 10px;">
                                    <% if (locals.user.investmentAccess === 'access') { %>
                                        <div class="progress-bar bg-success" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                                    <% } else if (locals.user.investmentAccess === 'pending') { %>
                                        <div class="progress-bar bg-warning" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                                    <% } else { %>
                                        <div class="progress-bar bg-danger" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                    <% } %>
                                </div>
                                <div class="d-flex justify-content-between mt-1">
                                    <small class="text-muted">Status: 
                                        <span class="fw-bold <%= locals.user.investmentAccess === 'access' ? 'text-success' : (locals.user.investmentAccess === 'pending' ? 'text-warning' : 'text-danger') %>">
                                            <%= locals.user.investmentAccess === 'access' ? 'Approved' : (locals.user.investmentAccess === 'pending' ? 'Pending Approval' : 'Not Requested') %>
                                        </span>
                                    </small>
                                    <small class="text-muted">Updated: <%= new Date().toLocaleDateString() %></small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 text-center">
                            <div class="py-2 animate-fade-in delay-2">
                                <h5 class="text-muted mb-3">Your User Code</h5>
                                <div class="user-code" style="font-size: 1.5rem;">
                                    <%= locals.completeUser ? locals.completeUser.userCode : (locals.user.userCode || 'N/A') %>
                                </div>
                                <p class="small text-muted mt-2">Keep this code for future reference</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Row -->
    <div class="row mb-4">
        <div class="col-md-3 col-sm-6 mb-4 mb-md-0">
            <div class="card h-100 animate-fade-in delay-2">
                <div class="card-body text-center">
                    <div class="rounded-circle bg-primary bg-opacity-10 p-3 mx-auto mb-3" style="width: fit-content;">
                        <i class="fas fa-trophy fa-2x text-primary"></i>
                    </div>
                    <h3 class="stat-counter"><%= locals.user.challengePoints || 0 %></h3>
                    <p class="stat-label mb-0">Challenge Points</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-4 mb-md-0">
            <div class="card h-100 animate-fade-in delay-3">
                <div class="card-body text-center">
                    <div class="rounded-circle bg-success bg-opacity-10 p-3 mx-auto mb-3" style="width: fit-content;">
                        <i class="fas fa-users fa-2x text-success"></i>
                    </div>
                    <h3 class="stat-counter">0</h3>
                    <p class="stat-label mb-0">Team Members</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-4 mb-md-0">
            <div class="card h-100 animate-fade-in delay-3">
                <div class="card-body text-center">
                    <div class="rounded-circle bg-info bg-opacity-10 p-3 mx-auto mb-3" style="width: fit-content;">
                        <i class="fas fa-wallet fa-2x text-info"></i>
                    </div>
                    <h3 class="stat-counter">$<%= locals.user.balance || 0 %></h3>
                    <p class="stat-label mb-0">Balance</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card h-100 animate-fade-in delay-4">
                <div class="card-body text-center">
                    <div class="rounded-circle bg-warning bg-opacity-10 p-3 mx-auto mb-3" style="width: fit-content;">
                        <i class="fas fa-tasks fa-2x text-warning"></i>
                    </div>
                    <h3 class="stat-counter"><%= locals.user.completedChallenges ? locals.user.completedChallenges.length : 0 %></h3>
                    <p class="stat-label mb-0">Completed Tasks</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row">
        <div class="col-12">
            <div class="card animate-fade-in delay-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-bolt me-2"></i>Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex flex-wrap justify-content-center gap-3">
                        <a href="/team" class="btn btn-primary">
                            <i class="fas fa-users me-2"></i>View Team
                        </a>
                        <a href="/investments" class="btn btn-success">
                            <i class="fas fa-chart-line me-2"></i>Investments
                        </a>
                        <a href="/challenges" class="btn btn-warning">
                            <i class="fas fa-trophy me-2"></i>Daily Challenges
                        </a>
                        <% if (locals.user && locals.user.role === 'admin') { %>
                        <a href="/admin" class="btn btn-danger">
                            <i class="fas fa-user-shield me-2"></i>Admin Panel
                        </a>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">
                <h5>Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="list-group">
                    <a href="#" class="list-group-item list-group-item-action">
                        <i class="fas fa-user"></i> View Profile
                    </a>
                    <a href="#" class="list-group-item list-group-item-action">
                        <i class="fas fa-bell"></i> Notifications
                    </a>
                    <a href="#" class="list-group-item list-group-item-action">
                        <i class="fas fa-envelope"></i> Messages
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">
                <h5>Account Settings</h5>
            </div>
            <div class="card-body">
                <a href="/change-password" class="btn btn-warning">
                    <i class="fas fa-key"></i> Change Password
                </a>
                <a href="/sign-out" class="btn btn-danger ms-2">
                    <i class="fas fa-sign-out-alt"></i> Sign Out
                </a>
            </div>
        </div>
    </div>
</div>
