<div class="row">
    <div class="col-12">
        <h2 class="cosmic-title text-center mb-4">Reset Password</h2>
        
        <form id="reset-password-form" action="/send-reset-link" method="post">
            <% if (locals.flash.error && locals.flash.error.length > 0) { %>
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="alert alert-danger mb-4" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            <%=locals.flash.error%>
                        </div>
                        <div class="divider d-flex align-items-center my-4"></div>
                        <div class="d-grid gap-2">
                            <a href="/forgot-password" class="btn cosmic-btn btn-lg btn-block">
                                <i class="fas fa-sync-alt me-2"></i>Try Again
                            </a>
                        </div>
                    </div>
                </div>
            <% } else if (locals.flash.success && locals.flash.success.length > 0) { %>
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="alert alert-success mb-4" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            <%=locals.flash.success%>
                        </div>
                        <div class="divider d-flex align-items-center my-4"></div>
                        <div class="d-grid gap-2">
                            <a href="/sign-in" class="btn cosmic-btn btn-lg btn-block">
                                <i class="fas fa-sign-in-alt me-2"></i>Back to Login
                            </a>
                        </div>
                    </div>
                </div>
            <% } else { %>
                <div class="row justify-content-center">
                    <div class="col-lg-10">
                        <div class="text-white mb-4 text-center">
                            <p>Enter your email address and we'll send you a link to reset your password.</p>
                        </div>
                    </div>
                </div>
                
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="form-outline mb-4">
                            <input type="email" name="email" id="email" class="form-control cosmic-input" required placeholder="Email Address" />
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn cosmic-btn btn-lg" value="Forgot password">
                                <i class="fas fa-paper-plane me-2"></i>Send Reset Link
                            </button>
                        </div>
                    </div>
                </div>
                
                <div class="divider d-flex align-items-center my-4"></div>
                
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <div class="d-grid gap-2">
                            <a href="/sign-in" class="btn cosmic-btn-outline btn-lg btn-block">
                                <i class="fas fa-arrow-left me-2"></i>Back to Login
                            </a>
                        </div>
                    </div>
                </div>
            <% } %>
        </form>
    </div>
</div>

